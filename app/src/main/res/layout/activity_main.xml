<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="2 Pontos"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scrollView2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ddp1"
                    android:layout_width="102dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="24dp"
                    android:digits="0123456789,-"
                    android:ems="10"
                    android:hint="(Ponto 1)"
                    android:inputType="numberDecimal"
                    app:layout_constraintEnd_toStartOf="@+id/label1"
                    app:layout_constraintTop_toBottomOf="@+id/label1" />

                <EditText
                    android:id="@+id/ddp2"
                    android:layout_width="92dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="24dp"
                    android:digits="0123456789,-"
                    android:ems="10"
                    android:hint="(Ponto 2)"
                    android:inputType="numberDecimal"
                    app:layout_constraintStart_toEndOf="@+id/label1"
                    app:layout_constraintTop_toBottomOf="@+id/label1" />

            </LinearLayout>

            <TextView
                android:id="@+id/ddpr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Distância"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label1" />

            <TextView
                android:id="@+id/retaR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Equação Reta"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ddpr" />

            <Button
                android:id="@+id/button_ddp"
                android:layout_width="121dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Calcular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label1" />

            <TextView
                android:id="@+id/LabelPontoReta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:text="Distância Ponto e Reta"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_ddp" />

            <EditText
                android:id="@+id/pontoVreta"
                android:layout_width="74dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                android:digits="0123456789,-"
                android:ems="10"
                android:gravity="center"
                android:hint="(x , y)"
                android:inputType="numberDecimal"
                app:layout_constraintEnd_toEndOf="@+id/LabelPontoReta"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="@+id/LabelPontoReta"
                app:layout_constraintTop_toBottomOf="@+id/LabelPontoReta" />

            <EditText
                android:id="@+id/eqRetaPR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:gravity="center"
                android:hint="ax + by + c = 0"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/LabelPontoReta"
                app:layout_constraintStart_toStartOf="@+id/LabelPontoReta"
                app:layout_constraintTop_toBottomOf="@+id/pontoVreta" />

            <TextView
                android:id="@+id/ResultadoPReta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Distância" />

            <Button
                android:id="@+id/pontoRetaCalc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Calcular"
                app:layout_constraintEnd_toEndOf="@+id/LabelPontoReta"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="@+id/LabelPontoReta"
                app:layout_constraintTop_toBottomOf="@+id/LabelPontoReta" />

            <TextView
                android:id="@+id/labelDeterminante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Determinante"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/det11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="number"
                        android:digits="0123456789-"
                        android:text="1" />

                    <EditText
                        android:id="@+id/det12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:digits="0123456789-"
                        android:inputType="number"
                        android:text="1" />

                    <EditText
                        android:id="@+id/det13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:digits="0123456789-"
                        android:inputType="number"
                        android:text="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/det21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:digits="0123456789-"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="1" />

                    <EditText
                        android:id="@+id/det22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:digits="0123456789-"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:ems="10"
                        android:text="1"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/det23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:digits="0123456789-"
                        android:layout_weight="1"
                        android:text="1"
                        android:gravity="center"
                        android:ems="10"
                        android:inputType="number" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/det31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1"
                        android:gravity="center"
                        android:ems="10"
                        android:digits="0123456789-"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/det32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:digits="0123456789-"
                        android:gravity="center"
                        android:text="1"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/det33"
                        android:layout_width="wrap_content"
                        android:digits="0123456789-"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1"
                        android:ems="10"
                        android:inputType="number" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>